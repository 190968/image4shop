doctype html
html
    head
        title my Site
    style.
            .folders a {
                box-shadow:inset 0 0 5px 5px #ddd; 
                margin: 1%;
                width: 47%;
                height: 50px;      
                display: inline-block;
                text-align: center;
                border: 2px solid #000;
                
                font: 400 30px/50px "Arial",sans-serif;
                text-decoration: none;
                color: #000;
            }
            .add_folder {
                box-shadow:inset 0 0 5px 5px silver; 
                margin: 20px;      
                display: block;
                padding: 5px 20px;
                border: 2px solid red;
                width: 200px;
                text-align: center;
                font: 400 20px/25px "Arial",sans-serif;
                text-decoration: none;
                color: #000;
            }
            a:hover {
                background-color: #000;
                color: #fff;
            }
            div.folders {
                margin: 5vw auto;
                width: 70%;
               
            
            }
            @media  (max-width: 600px) {
            a {
               
                font: 400 50px/50px "Arial",sans-serif;
            }
            div.folders {
                width: 100%;
                margin: 10px 0;
            }

            }
            div,
            body {
            background-color: #00ffff;
            }    
    body
        div
          a.add_folder(href = `${url}/createFolder`) create new folder
          a.add_folder(href = `${url}/upload_base`) add base      
        div.folders
            p Folders:#{folders.length}
            -var one = folders
            for i in one               
                a(href= `${url}/items/?brand=${i}`)= i  