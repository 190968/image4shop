doctype html
html
    head
        title my Site
    style.
            a,button  {
                box-shadow: inset 0 0 5px 5px #ee82ee; 
                margin:10px 2%;
                width: 46%;               
                border-radius: 50px;      
                display: inline-block;
                text-align: center;
                background-color: #dda0dd;               
                font: 600 35px/60px "Arial",sans-serif;
                text-decoration: none;
                color: #fff;
                z-index: 0;
                height: 60px;
                border: none;
                vertical-align: middle;
                position: relative;
            }
            .a_folders {
                width: 100%;
                margin:10px 7%;
            }
           
            #main_block {
                margin: 5vw auto;
                width: 70%;
                padding: 0;           
            }
            p {            
                width: 48%;
                margin: 1%;
                text-align: center;
                display: inline-block;
            }
            span.del, span.rename {               
                font: 600 30px/50px "Arial",sans-serif;               
                display: inline-block;
                height: 50px;
                width: 50px;
                z-index: 10;
                margin-left: -90px;                
                text-align: center;
                cursor: pointer;
                vertical-align: middle;
                position: relative;
                right: 0;   

            }
            span.rename {
                 margin-right: -90px;
                 margin-left: 0;
                 color: green;
            }
            span.rename:hover {
               color: maroon;
            }
            #delete,#rename {
                display: none;
                width: 90%;
                border: 1px solird red;
                text-align: center;
                margin: 100px auto 0;
                font: 600 40px/40px "Arial",sans-serif;
            }
            #last_name {
                border: none;
                width: 20%;
                text-align: center;
            }
            input {
                padding: 0 1%;
                width: 44%;
                float: none;
                box-sizing: border-box;
                outline: none;
                display: block;
                margin: 20px auto;
                border: none;
                font: 600 30px/60px "Arial",sans-serif;
                border-bottom: 2px solid #ee82ee;
                color: red;
               
            }
            input:selection {
                border-radius: 40px;
            }
            #folder_delete,
            #folder_rename {
                padding:0 20px;
                border-radius: 5px;
                margin: 10px;
                color: white;
                background-color: blue;
                font: 300 40px/40px "Arial",sans-serif;
            }
            h1 {
               text-align: center;
            }
            @media (max-width: 1000px) {
                a{
                   
                    height: 100px;
                    font: 400 30px/100px "Arial",sans-serif;
                }
                #main_block {
                    width: 100%;
                    margin: 10px 0;
                }
                #rename a,input {
                    width: 100%;
                    font-size: 40px;
                    height: 100px;
                    margin: 30px auto;
                }              
                div,
                body {
                background-color: #00ffff;
                }
            } 
           
   
    body  
                  
        form#rename(action="/rename?last=last_name" method="get")
            label Rename folder                
                input#last_name(type="text" name="last_name")          
            input(type="text" name="name" placeholder="input new name" minlength="3" required autofocus)          
            button(type="submit") RENAME

        p#delete You wish delete folder
            span#folder_delete 
            b ?              
            a(href= `${url}`) no 
            a(href= `${url}` title="only admin") yes (only admin)                     
        div#main_block
            div#one                
                a(href = `${url}/createFolder`) create folder
                a(href = `${url}/upload_base`) upload base      
                h1 #{folders.length} folders
           
            -var one = folders           
            div#one
                for i,index in one
                    p    
                        span.rename(
                            title="rename folder",                            
                            onclick=`rename_folder(${index})`
                        ) &#x270E;                                   
                        a.a_folders(href= `${url}/items/?brand=${i}`)= i                                    
                        span.del(
                            title="delete folder",
                            onclick= `delete_folder(${index})` 
                        ) &#x274C;
        

        

    script.
        var two = "#{folders}"
        const  rename_folder = ( b ) => {
            document.getElementById("main_block").style.display = "none"
            document.getElementById("rename").style.display = "block"
            //- document.getElementById("folder_rename").innerHTML = two.split(',')[b].toUpperCase()
            document.getElementById("last_name").value = two.split(',')[b]
        }                   
       const  delete_folder = ( b ) => {
            document.getElementById("main_block").style.display = "none"
            document.getElementById("delete").style.display = "block"
            document.getElementById("folder_delete").innerHTML = two.split(',')[b]
        }                   