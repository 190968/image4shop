          var size_image = document.getElementsByTagName("img")[b].style.width
          var position = document.getElementsByTagName("img")[b].style.position
          document.getElementById("name_image").style.position = position == "fixed" ? "static" : "fixed"
          document.getElementById("name_image").style.display = position !== "fixed" ? "block" : "none"
          document.getElementById("name_image").style.top = "10px"
          document.getElementById("name_image").style.zIndex = 10
          document.getElementById("delete").href = url+ '/delete/?brand=' + brand + '&name=' + img.split(",")[b]
          document.getElementById("name").innerHTML = img.split(",")[b] + ' ' + ' <b>DELETE</b>'      
          document.getElementsByTagName("img")[b].style.width = size_image == "100%" ? "24%" :  "100%" 
          document.getElementsByTagName("img")[b].style.top = 0
          document.getElementsByTagName("img")[b].style.position = position == "fixed" ? "static" : "fixed"
           
      }                         
     
   
 
