  div.block_images 
     for i,index in image                   
        img.all_image(
          src = `${url}/items/${brand}/${i.replace(".jpg","").replace(".webp","")}`
          alt ="no image"
          onLeave =`view_name(${index})`
          onclick =`view_image(${index})`
         
        )
  script. 
        var img = "#{image}"

        const view_name = ( b ) => {
          document.getElementById("name").innerHTML = 'img[b]' 
        }

        const  view_image = ( b ) => {           
          var size = document.getElementsByTagName("img")[b].style.width
          var position = document.getElementsByTagName("img")[b].style.position
          document.getElementById("name_image").style.position = position == "fixed" ? "static" : "fixed"
          document.getElementById("name_image").style.display = position == "fixed" ? "none" : "blocknp"
          document.getElementById("name_image").style.top = "20px"
          document.getElementById("name_image").style.zIndex = 10
          document.getElementById("name").innerHTML = img.split(",")[b] + ' ' + ' DELETE'      
          document.getElementsByTagName("img")[b].style.width = size=="80%" ? "23%" : "80%"
          document.getElementsByTagName("img")[b].style.top = "10px"
          document.getElementsByTagName("img")[b].style.position = position == "fixed" ? "static" : "fixed"
           
        }                                 