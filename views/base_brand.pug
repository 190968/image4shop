body   
    -var one = base
   
   
        a.close(href="/" title="exit") &#11013;
        a.add(title="add item" onclick='open_add()') &#10010;              
        div
            p.main               
                span#image image  
                span brand 
                span model
                span.teen gender
                span.teen color
                span size
                span#five cost
                span#five sale
                span#save save
            p.one           
            for i,index in one               
                    form.one(action="/write_to_base" method="get")
                        input#id(type="text" value=i.id name="id")
                        input#id(type="text" value=i.brand name="brand")                       
                        span#image
                            a(href = `${url}/upload_image/?brand=${i.brand}&model=${i.model}_${i.color}&number=`)
                                img(src=`${url}/items/${i.brand}/${i.model}_${i.color}` alt="no" )
                            a(href = `${url}/upload_image/?brand=${i.brand}&model=${i.model}_${i.color}&number=1`)    
                                img(src=`${url}/items/${i.brand}/${i.model}_${i.color}1`  alt="no")
                            a(href = `${url}/upload_image/?brand=${i.brand}&model=${i.model}_${i.color}&number=2`)
                                img(src=`${url}/items/${i.brand}/${i.model}_${i.color}2` alt="no" )
                        span= i.brand
                        span= i.model
                        span.teen= i.gender
                        span.teen= i.color
                        span= i.size
                        input#five(type="text" value=i.cost name="cost") 
                        input#five(type="text" value=i.sale name="sale")
                        button.write(type="submit" title="write to base") &#x270E;
                        button.write(title="delete item")  &#10006;
        div#add_item
               button.write(title="close" onclick="close_add()" style="float: left;margin:0")  &#10006;   
               h2 ADD ITEM
               form.one(action="/add_to_base" method="get")
                        input#id(type="text" name="id")
                        input(type="text"  value=`${brand}` name="brand")
                        input(type="text" placeholder="model" name="model" required)
                        select(name="gender" required)
                            option(name="men" value="men") men
                            option(name="women" value="women") women
                            option(name="girl" value="girl") girl
                            option(name="boy" value="boy") boy
                        input(type="text" placeholder="size" name="size" required)      
                        input(type="text" placeholder="color" name="color" required)   
                        input#teen(type="text" placeholder="cost $" name="cost" required) 
                        input#teen(type="text" placeholder="sale %" name="sale")
                        
                        
                        button.add_item(type="submit" title="add to base" style="width: 200px") ADD ITEM
                                  
           
           

